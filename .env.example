# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development

# Database Configuration
DATABASE_URL=sqlite:///wishlist.db

# Email Configuration (Mailgun)
MAIL_SERVER=smtp.mailgun.org
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-mailgun-username@your-domain.com
MAIL_PASSWORD=your-mailgun-password
MAIL_DEFAULT_SENDER=noreply@your-domain.com

# Application Configuration
APP_NAME=Christmas Wishlist
APP_URL=http://localhost:5000

# Reverse Proxy Configuration (for Nginx, Apache, etc.)
# Set to 'True' when using HTTPS behind a reverse proxy
PREFERRED_URL_SCHEME=http
SESSION_COOKIE_SECURE=False

# For production with HTTPS, use:
# PREFERRED_URL_SCHEME=https
# SESSION_COOKIE_SECURE=True

# Security
# Token expiry times in seconds
PASSWORD_RESET_TOKEN_EXPIRY=3600
MAGIC_LINK_TOKEN_EXPIRY=1800

# Daily Digest Configuration
# Hour (0-23, local time) when daily wishlist digest emails should be sent
# Container timezone is set to America/New_York in docker-compose.yml
# This means the hour is in Eastern Time (ET) and automatically adjusts for DST
# Example: 9 = 9 AM ET (either EDT or EST depending on time of year)
# Default: 9 (9:00 AM ET)
DAILY_DIGEST_HOUR=9

# WebAuthn/Passkey Configuration
# Relying Party ID - must match your domain (use "localhost" for local development)
# For production: use your domain name without protocol (e.g., "example.com")
WEBAUTHN_RP_ID=localhost

# Admin Configuration
# Create first admin user with this email (passwordless - will use magic link/passkey)
ADMIN_EMAIL=admin@example.com
ADMIN_NAME=Administrator

# ScraperAPI Configuration (Optional)
# Sign up at https://www.scraperapi.com/ for free tier (1000 requests/month)
# Used to bypass Amazon bot detection for reliable product scraping
SCRAPER_API_KEY=abcde124353425
